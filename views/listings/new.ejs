
<% layout("./layouts/boilerplate.ejs")%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <br><br>
            <h3>Create New Listing </h3>
            <br>
            <form method="post" action="/listings" class="needs-validation" novalidate>
                <div class="mb-3" >
                    <label for="title" class="form-label">Title</label>
                    <input name="title"  class="form-control" placeholder="Add a catchy title" type="text" required > 
                    <div class="valid-feedback">Title looks good!</div>
                    <div class="invalid-feedback">Please enter title!</div>
                </div>
                <div class="mb-3" >
                    <label for="description" class="form-label">Description</label>
                    <textarea name="description"  class="form-control"  placeholder="Enter description"  required ></textarea>
                    <div class="valid-feedback">Description looks good!</div>
                    <div class="invalid-feedback">Please enter Description!</div>
                </div>
                <div class="mb-3" >
                    <label for="image" class="form-label">Image Link</label>
                    <input name="image[url]"  class="form-control"  placeholder="Enter image URL/Link"  type="text" >
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4" >
                        <label for="price"  class="form-label" >Price</label>
                        <input name="price"  class="form-control" placeholder="1200"  type="text"  required > 
                        <div class="invalid-feedback">Please enter price!</div>
                    </div>
                    <div class="mb-3 col-md-8" >
                        <label for="country" class="form-label" >Country</label>
                        <input name="country"  class="form-control"  placeholder="India"  type="text" required >
                        <div class="invalid-feedback">Please enter country!</div>
                    </div>
                </div>
                <div class="mb-3" >
                    <label for="location" class="form-label" >Location</label>
                    <input name="location"  class="form-control" placeholder="Jaipur,Rajasthan"  type="text" required >
                    <div class="invalid-feedback">Please enter location!</div>
                </div>
                <br>
                <button class="btn btn-dark add-btn">Add</button>
                <br><br>
            </form>
        </div>
    </div>
</body>